# Database - PostgreSQL connection (Zeabur will provide DATABASE_URL automatically)
DATABASE_URL="postgresql://username:password@localhost:5432/outsourcing_management"

# JWT
JWT_SECRET="your-super-secret-jwt-key-for-outsourcing-management-system-2024-production"
JWT_EXPIRES_IN="7d"

# Server
PORT=5000
NODE_ENV="production"

# Frontend - Not needed in production as frontend is served by backend
FRONTEND_URL="https://your-zeabur-domain.zeabur.app"

# File Upload
UPLOAD_PATH="./uploads"

# Email (for notifications) - Configure these in Zeabur dashboard
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER=""
SMTP_PASS=""