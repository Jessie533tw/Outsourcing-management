{
  "name": "construction-procurement-system",
  "version": "1.0.0",
  "description": "建設公司發包管理系統",
  "main": "src/app.js",
  "scripts": {
    "start": "NODE_ENV=production node src/app.js",
    "dev": "nodemon src/app.js",
    "client": "cd client && npm run dev",
    "server": "nodemon src/app.js",
    "build": "npm run install-client && cd client && npm run build || echo 'Frontend build failed, using fallback'",
    "install-client": "cd client && npm install || echo 'Client install failed'",
    "init-data": "node scripts/init-data.js",
    "setup": "npm install && npm run install-client && npm run init-data",
    "postinstall": "echo 'Dependencies installed successfully'"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.0",
    "pg": "^8.11.3",
    "sequelize": "^6.35.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pdfkit": "^0.13.0",
    "nodemailer": "^6.9.7",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "helmet": "^7.1.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}