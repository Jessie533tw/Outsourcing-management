# Environment
NODE_ENV=production
PORT=5000

# Database (Choose one)
# For MongoDB
MONGODB_URI=mongodb://localhost:27017/construction_procurement

# For PostgreSQL (Zeabur will provide this)
DATABASE_URL=postgresql://username:password@hostname:port/database_name
# or
POSTGRES_URL=postgresql://username:password@hostname:port/database_name

# JWT Secret (Required)
JWT_SECRET=your_strong_jwt_secret_key_here_minimum_32_characters

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_specific_password

# Frontend URL (Optional)
FRONTEND_URL=https://your-app.zeabur.app